{
	"version":1,
	"settings": {
		"layout": {
			"contentSize": "1140px",
			"wideSize": "1400px",
			"units": [ "px", "em", "rem", "%", "vw" ]
		},
		"spacing": {
            "blockGap": true
        },
		"color": {
			"custom": false,
			"corePalette": false,
			"coreGradients": false,
			"palette": [
				{
					"slug": "opcan-forest-green",
					"color": "#2BAFC5",
					"name": "Opcan forest green"
				}
			]
		},
		"typography": {
			"fontFamilies": [
				{
					"fontFamily": "'Montserrat', Arial, Helvetica, sans-serif",
					"slug": "body",
					"name": "Body font"
				},
				{
					"fontFamily": "'Museo', 'Roboto', sans-serif",
					"slug": "headings",
					"name": "Heading"
				}
			],
			"fontSize": "16px",
			"fontSizes": [
				{
					"slug": "small",
					"size": "clamp(0.8rem, 2.6vw, 0.9rem)",
					"name": "Small"
				},
				{
					"slug": "normal",
					"size": "clamp(0.9rem, 3vw, 1rem)",
					"name": "Body"
				},
				{
					"slug": "medium",
					"size": "clamp(1.2rem, 4vw, 1.6rem)",
					"name": "Medium"
				},
				{
					"slug": "large",
					"size": "clamp(1.6rem, 5vw, 2.2rem)",
					"name": "Large"
				},
				{
					"slug": "x-large",
					"size": "clamp(2.4rem, 6vw, 2.9rem)",
					"name": "Extra large"
				},
				{
					"slug": "huge",
					"size": "clamp(2.6rem, 5vw, 3.8rem)",
					"name": "Huge"
				}
			]
		}
	},
	"styles": {
		"spacing": {
			"blockGap": "3rem"
		},
		"elements": {
			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--huge)",
					"fontFamily": "var(--wp--preset--font-family--headings)",
					"lineHeight": "1.2"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)",
					"fontFamily": "var(--wp--preset--font-family--headings)",
					"lineHeight": "1.2"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)",
					"fontFamily": "var(--wp--preset--font-family--headings)",
					"lineHeight": "1.2"
				},
				"color": {
					"text": "var(--wp--preset--color--opcan-forest-green)"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",
					"fontFamily": "var(--wp--preset--font-family--body)",
					"lineHeight": "1.2"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--normal)",
					"fontFamily": "var(--wp--preset--font-family--body)",
					"lineHeight": "1.2"
				},
				"spacing": {
					"margin":{
						"bottom": "1rem"
					}
				}
			}	
		}
	}
}